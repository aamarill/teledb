<!DOCTYPE html>
<html>
  <head>
    <title>TeleDb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('app_logo.png'), :rel => 'icon', :type =>  'image/png' %>
  </head>

  <body>
    <!-- Header -->
    <div class='header row'>
      <div class='col-sm-3'>
        <div class='main-logo'>
          <%= link_to popular_tvshows_path do %>
            <%= image_tag "camera_icon.png", size:"60x60" %>
          <% end %>
        </div>
      </div>
      <div class='col-sm-6'>
        <h3 class='app-title'>
          Television Database
        </h1>
        <%= form_tag("/tvshows", method: "get", class: "search-bar") do %>
          <%= text_field_tag(:searchbar_input, @searchbar_input, {placeholder: "Search", required: 'required'}) %>
          <% submit_tag("Search") %>
        <% end %>
      </div>
      <div class='col-sm-3'>
        <%= link_to 'Popular Shows', popular_tvshows_path, class: 'popular-tab'  %>
      </div>
    </div>
    <!-- End of header -->

    <%= yield %>
  </body>
</html>
